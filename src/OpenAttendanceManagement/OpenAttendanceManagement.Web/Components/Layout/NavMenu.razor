    //         })
    //         .DoResult(
    //             _ => { StateHasChanged(); })
    //         .DoResult(result => result.Log("NavMenu StateHasChangedAsync end"));


    private async Task LogOut()
    {
        var result = await TokenService.LogOutAsync().Conveyor(TenantInformation.ClearTenant);
        if (result.IsSuccess)
        {
            NavigationManager.NavigateTo("/login");
        }
    }

}